<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
		<plugin>

            <!-- the plugin name [A-Za-z_] -->
            <pluginName>ComputerVision</pluginName>

            <!-- a short description -->
			<pluginDescription><![CDATA[A Pimcore plugin that analyzes images via Computer Vision API (Microsoft Cognitive Services)]]></pluginDescription>

            <!-- meta data -->
            <pluginVersion>1.0</pluginVersion>
            <pluginRevision>1</pluginRevision>
            <pluginBuildTimestamp>0</pluginBuildTimestamp>

            <!-- put in the URL for the plugin configuration eg. /plugin/ComputerVision/admin/index -->
            <pluginIframeSrc></pluginIframeSrc>

            <pluginXmlEditorFile>/website/var/config/extension-computervision.xml</pluginXmlEditorFile>

            <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
			<pluginClassName>\ComputerVision\Plugin</pluginClassName>

            <!-- include paths relative to plugin-directory -->
			<pluginIncludePaths>
				<path>/ComputerVision/lib</path>
			</pluginIncludePaths>

			<!-- namespaces to register with autoloader-->
			<pluginNamespaces>
				<namespace>ComputerVision</namespace>
			</pluginNamespaces>

			<!-- js files with path relative to plugin-directory -->
			<pluginJsPaths>
                <path>/plugins/ComputerVision/static/js/startup.js</path>
			</pluginJsPaths>

			<!-- css files with path relative to plugin-directory -->
			<pluginCssPaths>
                <path>/plugins/ComputerVision/static/css/computervision.css</path>
			</pluginCssPaths>
		</plugin>
</zend-config>
